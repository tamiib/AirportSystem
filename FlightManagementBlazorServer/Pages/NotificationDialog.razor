@if(ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
              <button type="button" @onclick="CloseDialog" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              @Description
            </div>
            <div class="modal-footer">
              <button type="button" @onclick="CloseDialog" class="btn btn-primary">OK</button>
            </div>
         </div>
     </div>
</div>

}

@code {

    public bool ShowDialog{ get; set; }

    [Parameter]
    public string Description{ get; set; }

    public void Show()
    {
        ShowDialog = true;
        StateHasChanged();
    }

    private void CloseDialog()
    {
        ShowDialog = false;
        StateHasChanged();
    }
}
